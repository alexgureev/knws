        "symfony/security": "2.2.*@dev",
        "symfony/validator": "2.3.*@dev",
        "symfony/form": "2.3.*@dev"
    },
    "repositories":[
        {
            "type":"git",
            "url":"http://github.com/barif/knws"
        }
    ],
    "autoload": {
        "psr-0" : {
                   "Knws" : "lib/"
